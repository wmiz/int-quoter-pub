// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Shop {
  id          String    @id @default(uuid())
  shopDomain  String    @unique
  installedAt DateTime  @default(now())
  settings    Settings?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Settings {
  id                        String   @id @default(uuid())
  shopId                    String   @unique
  shop                      Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)
  regionMode                String   @default("allow") // "allow" or "block" (deprecated, kept for backwards compatibility)
  regions                   String   @default("[]") // JSON array of ISO country codes (deprecated, kept for backwards compatibility)
  whitelistCountries        String   @default("[]") // JSON array of ISO country codes that should always allow checkout
  blacklistCountries        String   @default("[]") // JSON array of ISO country codes that should always show quote request
  popupFields               String?  // JSON config for popup fields
  draftOrderTags            String?  // Comma-separated tags
  hidePrices                Boolean  @default(false) // Hide prices for countries that show quote requests
  onboardingComplete        Boolean  @default(false) // Whether the onboarding process has been completed
  setupSuccessBannerDismissed Boolean @default(false) // Whether the setup success banner has been dismissed
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
}
